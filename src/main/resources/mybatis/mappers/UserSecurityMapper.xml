<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.galen.security.mapper.UserSecurityMapper">
    <resultMap id="BaseResultMap" type="com.galen.security.pojo.SecurityUser">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="phone" property="phone"/>
        <result column="enabled" property="enabled"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="userface" property="userface"/>
    </resultMap>

    <!--通过用户id查询用户的角色列表-->
    <select id="getRolesByUserId" resultType="com.galen.security.model.SysRole">
        SELECT r.* FROM sys_user_role ur,sys_role r where ur.role_id=r.id AND ur.user_id=#{id}
    </select>
    <!--懒加载查询用户的角色-->
    <resultMap id="lazyLoadRoles" type="com.galen.security.pojo.SecurityUser" extends="BaseResultMap">
        <collection property="roles" ofType="com.galen.security.model.SysRole"
                    select="com.galen.security.mapper.UserSecurityMapper.getRolesByUserId"
                    column="id"></collection>
    </resultMap>
    <!--通过用户名查询-->
    <select id="loadUserByUsername" resultMap="lazyLoadRoles">
        select * from sys_user WHERE username=#{username};
    </select>

    <!--权限-->
    <resultMap id="PermissionResultMap" type="com.galen.security.pojo.SecurityPermission">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="path" property="path" jdbcType="VARCHAR"/>
        <result column="component" property="component" javaType="java.lang.Object"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="iconCls" property="iconCls" jdbcType="VARCHAR"/>
        <result column="keepAlive" property="keepAlive" jdbcType="BIT"/>
        <result column="parentId" property="parentId" jdbcType="INTEGER"/>
        <association property="meta" javaType="com.galen.security.pojo.MenuMeta">
            <result column="keepAlive" property="keepAlive"/>
            <result column="requireAuth" property="requireAuth"/>
        </association>
        <collection property="roles" ofType="com.galen.security.model.SysRole">
            <id column="role_id" property="id"/>
            <result column="rname" property="name"/>
            <result column="rnamezh" property="namezh"/>
        </collection>
        <collection property="children" ofType="com.galen.security.pojo.SecurityPermission">
            <id column="id2" property="id"/>
            <result column="path2" property="path" jdbcType="VARCHAR"/>
            <result column="component2" property="component" jdbcType="VARCHAR"/>
            <result column="name2" property="name" jdbcType="VARCHAR"/>
            <result column="iconCls2" property="iconCls" jdbcType="VARCHAR"/>
            <association property="meta" javaType="com.galen.security.pojo.MenuMeta">
                <result column="keepAlive2" property="keepAlive"/>
                <result column="requireAuth2" property="requireAuth"/>
            </association>
            <collection property="children" ofType="com.galen.security.pojo.SecurityPermission">
                <id column="id3" property="id"/>
                <result column="name3" property="name" jdbcType="VARCHAR"/>
            </collection>
        </collection>
    </resultMap>
    <sql id="Permission_Column_List">
        p.*,
        r.id as role_id,r.name as rname,r.nameZh as rnamezh
    </sql>
    <!--获取数据库当前设置的所有权限-->
    <select id="getAllPermission" resultMap="PermissionResultMap">
        select
        <include refid="Permission_Column_List"/>
        from sys_permission p
        left join sys_permission_role pr on p.id=pr.permission_id
        left join sys_role r on pr.role_id=r.id
        WHERE p.enabled=true
        order by p.id desc
    </select>

</mapper>