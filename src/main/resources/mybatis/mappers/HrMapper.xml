<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.galen.security.mapper.HrMapper">
    <resultMap id="BaseResultMap" type="com.galen.security.pojo.SecurityUser">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="phone" property="phone"/>
        <result column="enabled" property="enabled"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="userface" property="userface"/>
    </resultMap>

    <!--通过用户id查询用户的权限列表-->
    <select id="getRolesByUserId" resultType="com.galen.security.model.SysRole">
        SELECT r.* FROM sys_user_role ur,sys_role r where ur.role_id=r.id AND ur.user_id=#{id}
    </select>
    <!--懒加载查询用户的权限-->
    <resultMap id="lazyLoadRoles" type="com.galen.security.pojo.SecurityUser" extends="BaseResultMap">
        <collection property="roles" ofType="com.galen.security.model.SysRole"
                    select="com.galen.security.mapper.HrMapper.getRolesByUserId"
                    column="id"></collection>
    </resultMap>
    <!--通过用户名查询-->
    <select id="loadUserByUsername" resultMap="lazyLoadRoles">
        select * from sys_user WHERE username=#{username};
    </select>

</mapper>